<databaseChangeLog
    xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xmlns:ext="http://www.liquibase.org/xml/ns/dbchangelog-ext"
    xmlns:pro="http://www.liquibase.org/xml/ns/pro"
    xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-latest.xsd
                        http://www.liquibase.org/xml/ns/dbchangelog-ext http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-ext.xsd
                        http://www.liquibase.org/xml/ns/pro http://www.liquibase.org/xml/ns/pro/liquibase-pro-latest.xsd">


    <changeSet id="create_interview_categories_table" author="dzmitry.papkou">
        <createTable tableName="interview_categories">
            <column name="id" type="bigserial">
                <constraints primaryKey="true" nullable="false" />
            </column>
            <column name="title" type="varchar(256)">
                <constraints nullable="false" />
            </column>
        </createTable>
        <rollback>
            <dropTable tableName="interview_categories" />
        </rollback>
    </changeSet>

    <changeSet id="create_interview_questions_table" author="dzmitry.papkou">
        <preConditions onFail="MARK_RAN">
            <not>
                <tableExists tableName="interview_questions" />
            </not>
        </preConditions>
        <comment>Create interview_questions table if it does not exist already</comment>
        <createTable tableName="interview_questions">
            <column name="id" type="BIGINT" autoIncrement="true">
                <constraints primaryKey="true" nullable="false" />
            </column>
            <column name="title" type="VARCHAR(256)">
                <constraints nullable="false" />
            </column>
        </createTable>
        <rollback>
            <dropTable tableName="interview_questions" cascadeConstraints="true" />
        </rollback>
    </changeSet>


</databaseChangeLog>